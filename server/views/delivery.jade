extends ./includes/layout
block main

	h1 Please enter your delivery details

	.container-fluid
		.row
			.col-md-4.col-md-offset-4.text-center
				.form-group
					form(action='/delivery' method='post' name="form")
						p Name
						input.form-control(type='text', placeholder= '#{user.profile.name}', readonly='')
						p Address
						input.form-control(type='text' placeholder='Flat/House no.' name="line1")
						input.form-control(type='text' placeholder='Name of building' name="line2")
						input.form-control(type='text' placeholder='Road' name="line3")
						input.form-control(type='text' placeholder='Landmark' name="line4")
						input.form-control(type='text' placeholder='Area' name="line5")
						input.form-control(type='text' placeholder='City' name="line6")
						p Enter pincode to check for 1 hour delivery
						input.form-control(type='text', maxlength='6', placeholder='Enter your Pincode', name='line7')
						form(action="/checkdelivery" method="post" name="form")
							button.btn.btn-warning(type='button') Check
						.form-group
							.checkbox#check
								label
									input(type='checkbox')
									|  I want 1 hour delivery

						form(action="/delivery" method="post" name="form")
							button.btn.btn-warning(type='submit') Send my Dabba