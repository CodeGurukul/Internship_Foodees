if user
  .btn-group.btn-position
      button.btn.btn-danger(type='button')  Hi, #{user.profile.name}
      button.btn.btn-danger.dropdown-toggle.dropdown-arrow(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          span.caret
            |         
            span.sr-only Toggle Dropdown

      ul.dropdown-menu
        li
          img.img-circle.dropdown-profile-pic(src='#{user.profile.picture}')
        li.divider(role='separator')
        li.text-center
          a(href='/dashboard') My Profile 
        if (user.type=="admin")
        li.text-center
          a(href='/setdefaultmenu') Set-Up Default Menu 
        
        li.text-center
          a(href='/signout') Logout