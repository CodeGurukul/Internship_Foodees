extends ./includes/layout
block main
  .wrapper#index
      .container
          h1.text-center Welcome
          .alert.alert-danger.alert-dismissible(role='alert') Incorrect Email and/or Password
            button.close(type='button', data-dismiss='alert', aria-label='Close')
              i(aria-hidden="true").fa.fa-times 
          form.form.text-center(action="/signin" method="post")
            input(type='email', placeholder='Email', name='email')
            input(type='password', placeholder='Password', name='password')
            button#login-button(type='submit') Let me in
            br
            a.btn(href='/signup')#signup Signup
            a.col-md-4.col-md-offset-4.btn.btn(href='/auth/facebook')#fb 
              .login-icon
                i.fa.fa-facebook 
                |&nbspLogin with Facebook
            br
            br
            a.col-md-4.col-md-offset-4.btn(href='/auth/google')#gp 
              .login-icon
                i.fa.fa-google-plus 
                |&nbspLogin with Google+
