extends ./includes/layout
block main
	form.sign-up.text-center#uploadForm(name="form", action='/signup', method='post')
		h1.sign-up-title Sign up for free
		input.sign-up-input(type='text', placeholder="What's your name?", name='name', autofocus='')
		#namemsg
		input.sign-up-input(type='email', placeholder="Email", name='email')
		#emailmsg
		input.sign-up-input(type='password', placeholder='Choose a password', name='password')
		input.sign-up-input(type='password', placeholder='Re-enter your password', name='password1')
		input(type='radio', name='sex', value='male')
		| Male &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
		input(type='radio', name='sex', value='female')
		| Female
		#sexmsg
		input(type='file', name='userPhoto')
		input#checkbox(type='checkbox', name='agree')
		| I agree to the  
		br
		a( data-toggle='modal', data-target='#myModal')
			| Terms and Conditions
			#termmsg
		
		#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
			.modal-dialog(role='document')
				.modal-content.text-center
					.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
