extends ./includes/layout
block main
	#wrapper
		#profile
			img.user(src= user.profile.picture)
			.info
			span.p.text-center
				p #{user.profile.name}
				p (#{user.type}) 
				p #{user.email}
	.container#address
		.row.jumbotron
			h3 Billing Address
			p #{user.address.line1}, #{user.address.line2},
			p #{user.address.line3},
			p #{user.address.line4},
			p #{user.address.line5},
			p #{user.address.line6}-#{user.address.line7}.
			
							
	.container
		.row.text-center
			if (user.type=='Customer')
				.row.text-center
					.col-md-10.col-md-offset-1
						font Your #{user.tiffinstatus}

	include ../views/partials/footer
